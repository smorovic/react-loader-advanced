{
  "name": "react-loader-advanced",
  "version": "2.0.1",
  "description": "Show loader overlaying your component during async events.",
  "main": "./lib/react-loader-advanced.js",
  "types": "./index.d.ts",
  "scripts": {
    "build": "npm run lint && npm run build-src",
    "build-src": "./node_modules/.bin/babel ./src --out-dir ./lib",
    "build-demos": "SET NODE_ENV=production webpack -p --config webpack.demos.config.js",
    "run-demos": "SET NODE_ENV=development webpack-dev-server --config webpack.demos.config.js --content-base demos/",
    "lint": "eslint ./src ./demos --fix",
    "test": "karma start --single-run",
    "prepublish": "npm run build",
    "start": "npm run run-demos"
  },
  "keywords": [
    "react",
    "component",
    "react-component",
    "loader",
    "loading",
    "overlay",
    "spinner"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nygardk/react-loader-advanced"
  },
  "author": {
    "name": "Klaus Nyg√•rd",
    "email": "klaus.nygard@gmail.com",
    "url": "http://klausnygard.fi"
  },
  "license": "MIT",
